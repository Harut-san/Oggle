{
  "manifest_version": 3,
  "name": "Oggle",
  "version": "1.1",
  "description": "Toggle outlines on page with icon or shortcut",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle outlines\n\nred - hyperlinks\nblue - buttons\norange - inputs\ngreen - tabindex\n",
    "default_icon": {
     "16": "icon67.png",
     "32": "icon67.png",
     "48": "icon67.png"
  }
    
  },
  "commands": {
    "toggle-outlines": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Toggle outlines on current page"
    }
  }
}